<%= simple_form_for([@toilet, @review]) do |f| %>
  <%= f.input :comment %>
  <%= f.input :rating, collection: [["Awful", 1], ["Meh", 2], ["Average", 3], ["Pretty good", 4], ["Awesome", 5]], label: "Rate your experience", input_html: {data: {controller: "starrating"}}%>
  <%= f.button :submit, class: "btn-submit"%>
<% end %>
