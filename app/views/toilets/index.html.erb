<div class="container">
  <div class="cards-container">
    <div class="cards">
      <% @toilets.each do |toilet| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path toilet.photos.first.key, height: 300, crop: :fill %>')">
          <h4><%= toilet.name %></h4>
        </div>
      <% end %>
    </div>
  </div>
</div>
